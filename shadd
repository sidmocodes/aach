<build>
  <plugins>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-shade-plugin</artifactId>
      <version>3.5.1</version>

      <executions>
        <execution>
          <phase>package</phase>
          <goals>
            <goal>shade</goal>
          </goals>

          <configuration>
            <createDependencyReducedPom>false</createDependencyReducedPom>

            <relocations>
              <relocation>
                <pattern>org.antlr.v4.runtime</pattern>
                <shadedPattern>shaded.antlr4.v493.runtime</shadedPattern>
                <includes>
                  <include>org.antlr:antlr4-runtime</include>
                </includes>
              </relocation>
            </relocations>
          </configuration>
        </execution>
      </executions>
    </plugin>
  </plugins>
</build>
